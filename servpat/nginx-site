server {
    listen      80;
    server_name www.zoltep.de zoltep.de;

    # location = /servpat { rewrite ^ /servpat/; }
    location / { try_files $uri @servpat; }
    location @servpat {

        auth_basic  "servpat";
        auth_basic_user_file /var/htpasswd/servpat.htpasswd;

        include uwsgi_params;
        uwsgi_pass unix:/tmp/servpat.sock;
    }
}