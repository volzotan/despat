<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.volzo.despat.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!--Info Box-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp">

                <ProgressBar
                    android:id="@+id/captureProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:min="0"
                    android:max="100"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/opaqueBlack"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:id="@+id/block_general">
                    <TextView
                        android:id="@+id/tv_block_general"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="no session active"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="@color/opaqueBlack"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:id="@+id/block_session">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="6pt"
                        android:textStyle="bold"
                        android:text="NAME:"/>
                    <TextView
                        android:id="@+id/tv_block_session"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="uninitialized"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="@color/opaqueBlack"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:id="@+id/block_duration">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="6pt"
                        android:textStyle="bold"
                        android:text="RUNNING FOR:"/>
                    <TextView
                        android:id="@+id/tv_block_duration"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="uninitialized"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="@color/opaqueBlack"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:id="@+id/block_numberofimages">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="6pt"
                        android:textStyle="bold"
                        android:text="IMAGES:"/>
                    <TextView
                        android:id="@+id/tv_block_numberofimages"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="uninitialized"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:background="@color/opaqueBlack"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:id="@+id/block_errors">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="6pt"
                        android:textStyle="bold"
                        android:text="ERRORS:"/>
                    <TextView
                        android:id="@+id/tv_block_errors"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="uninitialized"/>
                </LinearLayout>

            </LinearLayout>

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:columnCount="1"
                android:rowCount="2">

                <Button
                    android:text="Datasets"
                    android:drawableLeft="@drawable/ic_reorder_horizontal_white_18dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:id="@+id/bt_sessions" />

                <Button
                    android:text="Settings"
                    android:drawableStart="@drawable/ic_settings_white_18dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:id="@+id/bt_settings" />

            </GridLayout>

