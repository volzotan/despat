<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.volzo.despat.MainActivity">

    <de.volzo.despat.support.FixedAspectRatioFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:id="@+id/aspectratio_layout">

        <TextureView
            android:id="@+id/textureView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="texture_view" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="image_view" />

        <TextView
            android:id="@+id/tv_status"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="left"
            android:background="@color/opaqueBlack"
            android:text="uninitialized"/>

    </de.volzo.despat.support.FixedAspectRatioFrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <Button
            android:text="Configure"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_configure" />

        <ToggleButton
            android:textOn="Stop Capturing"
            android:textOff="Start Capturing"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_startStopCapturing" />

        <Button
            android:text="Toggle Camera"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_toggleCamera" />

        <Button
            android:text="Take Photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_takePhoto" />

        <Button
            android:text="Run Recognizer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_runRecognizer" />

        <Button
            android:text="HaltAndCatchFire"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_kill" />

        <Button
            android:text="Settings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_settings" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_dialog_alert"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp" />

</FrameLayout>
