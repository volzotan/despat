<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.volzo.despat.support.AspectRatioImageView
                android:id="@+id/compressedpreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <de.volzo.despat.userinterface.DrawSurface
                android:id="@+id/drawSurface_session"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </FrameLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="7dp"
            android:columnCount="2"
            android:rowCount="9" >

            <TextView
                android:id="@+id/label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_margin="3dp"
                android:text="session name:" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_margin="3dp"
                android:text="undef." />


            <TextView
                android:id="@+id/label_shutterInterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_margin="3dp"
                android:text="interval:" />

            <TextView
                android:id="@+id/shutterInterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_margin="3dp"
                android:text="undef." />


            <TextView
                android:id="@+id/label_detector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_margin="3dp"
                android:text="Detector Name:" />

            <TextView
                android:id="@+id/detector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_margin="3dp"
                android:text="undef." />


            <TextView
                android:id="@+id/label_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_margin="3dp"
                android:text="start:" />

            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_margin="3dp"
                android:text="undef." />


            <TextView
                android:id="@+id/label_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_margin="3dp"
                android:text="end:" />

            <TextView
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:layout_margin="3dp"
                android:text="undef." />

            <TextView
                android:id="@+id/label_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:layout_margin="3dp"
                android:text="duration:" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="5"
                android:layout_margin="3dp"
                android:text="undef." />

            <TextView
                android:id="@+id/label_numberOfCaptures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:layout_margin="3dp"
                android:text="captures" />

            <TextView
                android:id="@+id/numberOfCaptures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="6"
                android:layout_margin="3dp"
                android:text="-1" />

            <TextView
                android:id="@+id/label_maxTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="7"
                android:layout_margin="3dp"
                android:text="max temperature:" />

            <TextView
                android:id="@+id/maxTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="7"
                android:layout_margin="3dp"
                android:text="-1" />

            <TextView
                android:id="@+id/label_numberOfDetections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="8"
                android:layout_margin="3dp"
                android:text="objects:" />

            <TextView
                android:id="@+id/numberOfDetections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="8"
                android:layout_margin="3dp"
                android:text="-1" />

        </GridLayout>

        <TextView
            android:id="@+id/tv_glitches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="" />

        <Button
            android:id="@+id/bt_export"
            android:drawableLeft="@drawable/ic_baseline_get_app"
            android:drawableTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>